    
  <% if user_signed_in? %>
      <div class="greeting">
        <%= link_to "#{current_user.name}さん", user_path(current_user), class: :greeting__link%>
        <div class="side__image">
         <% if current_user.image.nil? %>
           <%= image_tag "noimage.png" %>
           <% else %>
        <%= image_tag current_user.image , class: :side__image %>
        </div>
      </div>
      <% end %>
    <% end %>

<div class="rooms"> 
   <div class="room_title">自分の商談一覧
   ( <%= current_user.opportunities.count %> ) 
    </div>
    <% current_user.opportunities.each do |opportunity| %>
    <div class="room">
      <div class="room-name">
        <%= link_to opportunity.title, opportunity_path(opportunity) %>
      </div>
    </div>
  <% end %>

  </div>
